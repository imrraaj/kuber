{
  "name": "kumbh",
  "version": "0.1.0",
  "description": "Strategy execution engine for Hyperliquid",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "kumbh": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts daemon",
    "daemon": "bun run src/index.ts daemon",
    "list": "bun run src/index.ts list",
    "status": "bun run src/index.ts status",
    "dashboard": "bun run src/index.ts dashboard",
    "add": "bun run src/index.ts add",
    "test": "bun test",
    "restart-strategy": "bun run src/cli/index.ts stop Max-Trend-Points; bun run src/cli/index.ts reload Max-Trend-Points && bun run src/cli/index.ts start Max-Trend-Points",
    "restart-strategy:clean": "bun run src/cli/index.ts stop Max-Trend-Points; rm -f ~/.kumbh/data/Max-Trend-Points.db; bun run src/cli/index.ts reload Max-Trend-Points && bun run src/cli/index.ts start Max-Trend-Points"
  },
  "keywords": [
    "trading",
    "hyperliquid",
    "strategy",
    "crypto",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@nktkas/hyperliquid": "^0.30.2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "elysia": "^1.4.22",
    "viem": "^2.44.4"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.11.5",
    "bun-types": "^1.0.25"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
